# Okta Configuration
OKTA_DOMAIN=https://your-domain.okta.com

# Native App Configuration (handles user authentication)
CLIENT_ID=your_native_app_client_id
CLIENT_SECRET=your_native_app_client_secret

# Service App Configuration (performs token exchange - API Services type in Okta)
SERVICE_CLIENT_ID=your_service_app_client_id
SERVICE_CLIENT_SECRET=your_service_app_client_secret

# Resource Server Configuration
RESOURCE_SERVER_ID=your_api_resource_server_id

# Authorization Server Audience
AUDIENCE=bifrost.com

# Redirect URI (must match what's configured in Okta)
REDIRECT_URI=http://client.bifrost.com:8080/callback

# Resource Server URI (protected API endpoint)
RESOURCE_SERVER_URI=http://api.bifrost.com:5000/protected
